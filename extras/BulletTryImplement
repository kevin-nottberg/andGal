public class bulletRounds
{
    int spaceShipInt;
    Rect posRect;
    Stiring direction;
    int X;
    int Y;
    String State;
    
    public bulletRounds( int spaceShipInt )
    {
        this.spaceShipInt = spaceShip;
        
        if ( spaceShipInt == 1 )
            direction = "down";
            X = topSrcRect.left;
            Y = topSrcRect.bottom + 1; 
        if ( spaceShipInt == 2 )
            direction = "up";
            X = bottomSrcRect.left;
            Y = bottomSrcRect.top + 50;
            
        Bullet();
    }
    
    public void Bullet()
    {
        posRect = new Rect( X, Y, ( X + 20 ), ( Y + 50 ) );
        collisionCheck();
    }
    
    public void updatePos( float deltaTime )
    {
        float deltaMove = 5 * deltaTime;
        
        if ( direction == "up" )
            Y =+ deltaMove;
        if ( direction == "down" )
            Y =- deltaMove;
        
        Bullet();
    }
    
    public void collisionCheck()
    {
        if ( spaceShipInt == 1 && ( Y + 50 ) == spaceShip.getY() )
            destroy();
        
        if ( spaceShipInt == 2 && Y == ( spacShip.getY() + 100 ) )
            destroy();
    }
    
    public Rect getRect()
    {
        return posRect;
    }
     
    public void destory()
    {
        X = 0;
        y = 0;
        State = null;
    }
    
    public String status()
    {
        return State;
    }
}
