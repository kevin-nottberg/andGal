package com.android.andGal.mainGame;

public class Rate {

	private double XRate;
	private double YRate;
	
	Rate(){
		XRate = 0;
		YRate = 0;
	}
	
	void nullRates(){
		XRate = 0;
		YRate = 0;
	}
	
	double getXRate(){
		return XRate;
	}
	
	double getYRate(){
		return YRate;
	}
	
	void setRate( double newXRate, double newYRate ){
		XRate = newXRate;
		YRate = newYRate;
	}
	
	void updateRates( double deltaXRate, double deltaYRate )
	{
		XRate += deltaXRate;
		YRate += deltaYRate;
	}
	
}
